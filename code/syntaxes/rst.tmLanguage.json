{
    "scopeName": "source.rst",
    "patterns": [
        {
            "include": "#body-element"
        }
    ],
    "repository": {
        "body-element": {
            "patterns": [
                {
                    "include": "#section"
                },
                {
                    "include": "#field-list"
                },
                {
                    "include": "#directive"
                },
                {
                    "include": "#link-definition"
                },
                {
                    "include": "#comment"
                },
                {
                    "include": "#inline-element"
                }
            ]
        },
        "inline-element": {
            "patterns": [
                {
                    "include": "#role"
                },
                {
                    "include": "#bold"
                },
                {
                    "include": "#italic"
                },
                {
                    "include": "#code"
                },
                {
                    "include": "#link-reference"
                }
            ]
        },
        "section": {
            "match": "^[=^'\"*+~-]+$",
            "name": "keyword.control"
        },
        "comment": {
            "begin": "^(\\s*)\\.\\.[ ]",
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "comment.line"
        },
        "field-list": {
            "begin": "(\\s*):([\\w-]+):([ ]|$)",
            "beginCaptures": {
                "2": {
                    "name": "storage.modifier"
                }
            },
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "field.list"
        },
        "directive": {
            "name": "meta.directive.rst",
            "patterns": [
                {
                    "include": "#python-code-block"
                },
                {
                    "include": "#doctest-directive"
                },
                {
                    "include": "#generic-directive"
                }
            ]
        },
        "doctest-directive": {
            "begin": "(\\s*)\\.\\.\\s+(doctest|testcode|testsetup|testcleanup)::",
            "beginCaptures": {
                "2": {
                    "name": "entity.name.function"
                }
            },
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "doctest.directive",
            "patterns": [
                {
                    "include": "#python-code"
                }
            ]
        },
        "python-code-block": {
            "begin": "(\\s*)\\.\\.\\s+(code-block)::\\s+python",
            "beginCaptures": {
                "2": {
                    "name": "entity.name.function"
                }
            },
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "code.block.directive",
            "patterns": [
                {
                    "include": "#python-code"
                }
            ]
        },
        "generic-directive": {
            "begin": "(\\s*)\\.\\.\\s+(([\\w]+):)?([\\w-]+)::.*",
            "beginCaptures": {
                "3": {
                    "name": "storage.type.namespace"
                },
                "4": {
                    "name": "entity.name.function"
                }
            },
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "block.directive",
            "patterns": [
                {
                    "include": "#body-element"
                }
            ]
        },
        "role": {
            "name": "meta.role.rst",
            "begin": ":(([\\w]+):)?([\\w-]+):`",
            "end": "`",
            "beginCaptures": {
                "2": {
                    "name": "storage.type.namespace"
                },
                "3": {
                    "name": "entity.name.function"
                }
            },
            "patterns": [
                {
                    "match": "([^`]+)(<.*>)",
                    "captures": {
                        "1": {
                            "name": "string"
                        },
                        "2": {
                            "name": "support.constant"
                        }
                    }
                },
                {
                    "match": "[^`]+",
                    "name": "support.constant"
                }
            ]
        },
        "bold": {
            "match": "\\*\\*(?! ).*?(?<! )\\*\\*",
            "name": "markup.bold"
        },
        "italic": {
            "match": "\\*(?! ).*?(?<! )\\*",
            "name": "markup.italic"
        },
        "code": {
            "match": "``(?! ).*?(?<! )``",
            "name": "string"
        },
        "link-definition": {
            "match": "\\.\\.\\s+(_.*:)\\s+(.*)$",
            "captures": {
                "1": {
                    "name": "string"
                },
                "2": {
                    "name": "entity.name.function"
                }
            }
        },
        "link-reference": {
            "match": "`(.*?)(<.*>)?`_",
            "name": "meta.link.rst",
            "captures": {
                "1": {
                    "name": "string"
                },
                "2": {
                    "name": "support.constant"
                }
            }
        },
        "python-code": {
            "begin": "(\\s*)",
            "end": "^(?!\\1\\s+)(?!\\s*$)",
            "name": "source.python",
            "patterns": [
                {
                    "include": "source.python"
                }
            ]
        }
    }
}