{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "webpack",
            "isBackground": false,
            "options": {
                "cwd": "${workspaceRoot}/code"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "panel": "dedicated",
                "reveal": "never"
            },
            "problemMatcher": [
                "$tsc-watch"
            ]
        },
        {
            "label": "Build Docs",
            "type": "shell",
            "command": "source ${workspaceRoot}/.env/bin/activate && make html",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceRoot}/docs"
            }
        }
    ]
}