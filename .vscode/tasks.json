{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceRoot}/code"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "panel": "dedicated",
                "reveal": "never"
            },
            "problemMatcher": [
                {
                    "base": "$tsc-watch",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "asset .*",
                        "endsPattern": "webpack .* compiled .*"
                    }
                }
            ]
        },
        {
            "label": "Build Tests",
            "type": "npm",
            "script": "compile-test",
            "isBackground": false,
            "options": {
                "cwd": "${workspaceRoot}/code"
            },
            "group": "build",
            "presentation": {
                "panel": "dedicated",
                "reveal": "never",
            },
            "problemMatcher": [
                "$tsc-watch"
            ]
        },
        {
            "label": "Build Docs",
            "type": "shell",
            "command": "source ${workspaceRoot}/.env/bin/activate && make html",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceRoot}/docs"
            }
        },
        {
            "label": "Regen Docutils Docs",
            "type": "process",
            "group": "build",
            "command": "${command:python.interpreterPath}",
            "args": [
                "${workspaceRoot}/scripts/generate_docutils_documentation.py",
                "-o",
                "lib/esbonio/esbonio/lsp/rst/"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "pytest file",
            "type": "shell",
            "command": "source ${workspaceRoot}/.env/bin/activate && pytest ${file}",
            "group": "test",
            "problemMatcher": [],
        },
        {
            "label": "Grammar Tests",
            "type": "npm",
            "script": "test-grammar",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceRoot}/code"
            },
            "problemMatcher": {
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/code"
                ],
                "pattern": [
                    {
                        "regexp": "^(ERROR)\\s([^:]+):(\\d+):(\\d+):(\\d+)\\s(.*)$",
                        "severity": 1,
                        "file": 2,
                        "line": 3,
                        "column": 4,
                        "endColumn": 5,
                        "message": 6
                    }
                ]
            }
        }
    ]
}
