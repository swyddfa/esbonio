{
    "[rst]": {
        "editor.tabSize": 3,
        "editor.rulers": [
            80
        ]
    },
    "files.associations": {
        "setup.cfg": "ini",
        "pyproject.toml": "ini"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.pyc": true,
        "**/__pycache__": true,
        "**/*.egg-info": true,
        "**/.tox": true
    },
    "python.pythonPath": ".env/bin/python3",
    "python.formatting.provider": "black",
}