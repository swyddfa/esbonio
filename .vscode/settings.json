{
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.formatOnSave": true,
    },
    "[restructuredtext]": {
        "editor.tabSize": 3,
    },
    "[typescript]": {
        "editor.tabSize": 2
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.pyc": true,
        "**/__pycache__": true,
        "**/*.egg-info": true,
        "**/.tox": true,
        "**/.pytest_cache": true,
        "**/.ipynb_checkpoints": true,
        "**/.coverage": true,
        "**/.vscode-test": true,
        "**/.mypy_cache": true,
        "**/.ruff_cache": true
    },
    "esbonio.server.showDeprecationWarnings": true,
    "python.testing.pytestArgs": [
        "lib/esbonio/tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    //"esbonio.trace.server": "verbose"
}
