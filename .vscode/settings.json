{
    "[rst]": {
        "editor.tabSize": 3,
    },
    "[typescript]": {
        "editor.tabSize": 2
    },
    "files.associations": {
        "setup.cfg": "ini",
        "pyproject.toml": "ini"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.pyc": true,
        "**/__pycache__": true,
        "**/*.egg-info": true,
        "**/.tox": true,
        "**/.pytest_cache": true,
        "**/.ipynb_checkpoints": true,
        "**/.coverage": true,
        "**/.vscode-test": true
    },
    "python.pythonPath": ".env/bin/python",
    "python.formatting.provider": "black",
}