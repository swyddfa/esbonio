{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "extensionHost",
            "request": "launch",
            "name": "Esbonio VSCode",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}/code",
                "--folder-uri=${workspaceRoot}/lib/esbonio/tests/data/sphinx-default"
            ],
            "outFiles": [
                "${workspaceRoot}/code/dist/**/*.js"
            ],
            "preLaunchTask": "${defaultBuildTask}"
        }
    ]
}